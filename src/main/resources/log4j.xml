<!DOCTYPE log4j:configuration PUBLIC "http://jakarta.apache.org/log4j/" "log4j.dtd">

<log4j:configuration>

    <appender name="createTree" class="org.apache.log4j.FileAppender">
        <param name="File" value="createTree.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t]: %m%n"/>
        </layout>
    </appender>

    <appender name="pdfExtract" class="org.apache.log4j.FileAppender">
        <param name="File" value="pdfextract.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t]: %m%n"/>
        </layout>
    </appender>

    <appender name="textNodeBuilder" class="org.apache.log4j.FileAppender">
        <param name="File" value="textNodeBuilder.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t]: %m%n"/>
        </layout>
    </appender>

    <appender name="pdfbox" class="org.apache.log4j.FileAppender">
        <param name="File" value="pdfbox.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t]: %m%n"/>
        </layout>
    </appender>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{MM/dd/yyyy HH:mm:ss.SSS}] %m%n"/>
        </layout>
    </appender>


    <logger name="org.elacin.pdfextract.createTree" additivity="false">
        <level value="WARN"/>
        <appender-ref ref="createTree"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.elacin.pdfextract" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="pdfExtract"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.elacin.pdfextract.textNodeBuilder" additivity="false">
        <!--all incoming TextPositions and generated TextNodes will be written to file if this
            is set to DEBUG -->
        <level value="WARN"/>
        <appender-ref ref="textNodeBuilder"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="org.apache.pdfbox" additivity="false">
        <!-- set this to DEBUG if PDFBox' logging is wanted -->
        <level value="INFO"/>
        <appender-ref ref="pdfbox"/>
        <appender-ref ref="console"/>
    </logger>

    <root>
        <level value="OFF"/>
    </root>

</log4j:configuration>